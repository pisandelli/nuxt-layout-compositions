.sidebarl
  display: flex
  flex-wrap: wrap
  gap: var(--sidebar-gap, 0)

  &:not([right]) > :first-child
    flex-basis: var(--sidebar-column-size, 0)
    flex-grow: 1
  
  &:not([right]) > :last-child
    flex-basis: 0
    flex-grow: 999
    min-inline-size: var(--sidebar-content-size, 50%)

  &[right] > :last-child
    flex-basis: var(--sidebar-column-size, 0)
    flex-grow: 1
  
  &[right] > :first-child
    flex-basis: 0
    flex-grow: 999
    min-inline-size: var(--sidebar-content-size, 50%)
